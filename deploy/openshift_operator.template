apiVersion: v1
kind: Template
metadata:
  name: jws-image-operator-template
  annotations:
    description: "Description JWS Operator template"
objects:
 - apiVersion: apps/v1
   kind: Deployment
   metadata:
     name: jws-image-operator
   spec:
     replicas: 1
     selector:
       matchLabels:
         name: jws-image-operator
     template:
       metadata:
         labels:
           name: jws-image-operator
       spec:
         serviceAccountName: jws-image-operator
         containers:
           - name: jws-image-operator
             image: "${IMAGE}"
             command:
             - jws-image-operator
             imagePullPolicy: Always
             env:
               - name: WATCH_NAMESPACE
                 valueFrom:
                   fieldRef:
                     fieldPath: metadata.namespace
               - name: POD_NAME
                 valueFrom:
                   fieldRef:
                     fieldPath: metadata.name
               - name: OPERATOR_NAME
                 value: "jws-image-operator"
#               - name: SERVER_READINESS_SCRIPT
#                 value: "/bin/busybox wget http://localhost:8080/health -O /dev/null"
# For pre 5.4 image you need to set username/password and use the following health check.
#                 value: "/usr/bin/curl --noproxy '*' -s -u ${JWS_ADMIN_USERNAME}:${JWS_ADMIN_PASSWORD} 'http://localhost:8080/manager/jmxproxy/?get=Catalina%3Atype%3DServer&att=stateName' | /usr/bin/grep -iq 'stateName *= *STARTED'"
#                 value: "/usr/bin/curl --noproxy '*' -s -u ${JWS_ADMIN_USERNAME}:${JWS_ADMIN_PASSWORD} 'http://localhost:8080/manager/jmxproxy/?get=Catalina%3Atype%3DServer&att=stateName' | /usr/bin/grep -iq 'stateName *= *STARTED'"
parameters:
  - name: IMAGE
    displayName: Docker image URL
    description: The URL where you pushed the operator
    required: true
